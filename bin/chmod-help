#!/bin/bash

echo "\
+---+-----+-------------------------+
| 0 | --- | no access               |
| 1 | --x | only execute            |
| 2 | -w- | only write              |
| 3 | -wx | write and execute       |
| 4 | r-- | only read               |
| 5 | r-x | read and execute        |
| 6 | rw- | read and write          |
| 7 | rwx | read, write and execute |
+---+-----+-------------------------+\
"
